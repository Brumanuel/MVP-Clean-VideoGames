<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/f_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_content_areas"
    android:layout_marginRight="@dimen/margin_content_areas"
    >
  <android.support.v7.widget.CardView
      android:id="@+id/card_view"
      android:layout_gravity="center"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:layout_marginBottom="@dimen/margin_content_areas"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical"
        >

      <ImageView
          android:id="@+id/iv_thumbail"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="6"
          android:layout_marginTop="@dimen/double_margin_content_areas"
          />

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="4"
          >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textColor="@color/colorText"
            />
        <TextView
            android:id="@+id/tv_date"
            android:layout_marginTop="@dimen/margin_content_areas"
            android:layout_below="@id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorText"
            android:textStyle="italic"
            />
      </RelativeLayout>
    </LinearLayout>

  </android.support.v7.widget.CardView>

</FrameLayout>